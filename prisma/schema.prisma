generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id                 String            @id @default(uuid())
  title              String
  description        String?
  author             String
  thumbnail          String
  uploadedAt         DateTime          @default(now())
  uploadedDocumentId String            @unique
  uploadedDocument   UploadedDocuments @relation(fields: [uploadedDocumentId], references: [id])
}

enum DocumentType {
  FILE
  WEBSITE
  YOUTUBE_TRANSCRIPT
  SUBTITLE
}

model UploadedDocuments {
  id           String      @id @default(uuid())
  documentType DocumentType
  uploadedAt   DateTime    @default(now())
  source       String
  ext          String?
  video        Video?
  userId       String
  user         User        @relation("UserUploadedDocuments", fields: [userId], references: [id])
  title        String?
}

model User {
  id String @id @default(uuid())
  name String?
  email String?
  password String?
  type String
  createdAt DateTime @default(now())
  sessionId String?
  chatHistory Json[] @default([])  // Array of chat messages
  uploadedDocuments UploadedDocuments[] @relation("UserUploadedDocuments")
}
